@model IEnumerable<DockerTutorial.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h1>Product List</h1>

<a asp-action="Add" class="btn btn-primary mb-3">Add New Product</a>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Description</td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" class="text-center">No products available</td>
            </tr>
        }
    </tbody>
</table>
